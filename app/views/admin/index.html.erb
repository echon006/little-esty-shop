<h1>Admin Dashboard</h1>
<h2>Top Customers</h2>
<ol>
<% @customers.top_customers.each do |customer| %>
  <li id="customer-<%= customer.id %>"><%= customer.full_name %> - <%= customer.purchase_count %> purchases</li>
<% end %>
</ol>

<h2>Incomplete Invoices</h2>
<ul>
  <% @invoices.incomplete_list.each do |invoice| %>
    <li id="invoice-<%= invoice.id %>">Invoice <%= link_to "##{invoice.id}", [:admin, invoice] %></li>
  <% end %>
</ul>

<%= link_to 'Merchants', admin_merchants_path %>
<%= link_to 'Invoices', admin_invoices_path %>